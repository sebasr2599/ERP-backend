generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int                  @id @default(autoincrement())
  username           String               @unique
  first_name         String
  last_name          String
  password           String
  rol                String
  HistoricEquivalent HistoricEquivalent[]
  HistoricPrice      HistoricPrice[]
  Inventory          Inventory[]
  Order              Order[]
}

model Category {
  id      Int       @id @default(autoincrement())
  name    String    @unique
  Product Product[]
}

model Unit {
  id                 Int                  @id @default(autoincrement())
  name               String               @unique
  EquivalentUnit     EquivalentUnit[]
  HistoricEquivalent HistoricEquivalent[]
  OrderDetail        OrderDetail[]
  Product            Product[]
}

model Client {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  Order Order[]
}

model Product {
  id                 Int                  @id @default(autoincrement())
  name               String               @unique
  description        String
  priceUnit          Float
  image              String
  unitId             Int
  categoryId         Int
  productKey         String?              @unique
  equivalentUnits    EquivalentUnit[]
  HistoricEquivalent HistoricEquivalent[]
  HistoricPrice      HistoricPrice[]
  Inventory          Inventory[]
  OrderDetail        OrderDetail[]
  category           Category             @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  unit               Unit                 @relation(fields: [unitId], references: [id], onDelete: Cascade)
}

model Inventory {
  id        Int      @id @default(autoincrement())
  quantity  Float
  date      DateTime
  productId Int
  userId    Int
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id])
}

model HistoricPrice {
  id        Int      @id @default(autoincrement())
  priceUnit Float
  date      DateTime
  productId Int
  userId    Int
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id])
}

model EquivalentUnit {
  id         Int     @id @default(autoincrement())
  equivalent Float
  productId  Int
  unitId     Int
  product    Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  unit       Unit    @relation(fields: [unitId], references: [id])
}

model HistoricEquivalent {
  id         Int      @id @default(autoincrement())
  equivalent Float
  date       DateTime
  productId  Int
  unitId     Int
  userId     Int
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  unit       Unit     @relation(fields: [unitId], references: [id])
  user       User     @relation(fields: [userId], references: [id])
}

model Order {
  id           Int           @id @default(autoincrement())
  date         DateTime
  status       String
  total        Float
  userId       Int
  clientId     Int?
  Client       Client?       @relation(fields: [clientId], references: [id])
  user         User          @relation(fields: [userId], references: [id])
  orderDetails OrderDetail[]
}

model OrderDetail {
  id        Int     @id @default(autoincrement())
  quantity  Float
  price     Float
  orderId   Int
  productId Int
  unitId    Int
  order     Order   @relation(fields: [orderId], references: [id])
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  unit      Unit    @relation(fields: [unitId], references: [id])
}
